<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_sls_invoice_move_form_ext" model="ir.ui.view">
            <field name="name">account.move.sls</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="payment_reference" position="after">
                    <field name="project_reference" attrs="{'readonly':[('state','!=','draft')]}" />
                </field>
            </field>
        </record>

    <record id="product_template_form_add_fields_bonobo_view" model="ir.ui.view">
        <field name="name">Fields Bonobo</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field
                    name="sale_secondary_uom_id"
                />
            </field>
        </field>
    </record>

    </data>
</odoo>
